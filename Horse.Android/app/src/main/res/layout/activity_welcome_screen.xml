<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.horse.screens.WelcomeScreenActivity"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@color/FunkyPink">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/FunkyDarkBlue"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="120px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">
            <Button
                android:id="@+id/join_game_lobby_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/join_game_lobby"
                android:textAlignment="center"
                android:background="@color/FunkyDarkBlue"
                android:textColor="@color/FunkyYellow"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
