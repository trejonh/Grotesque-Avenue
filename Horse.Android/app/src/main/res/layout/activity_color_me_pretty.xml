<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.horse.screens.gameScreens.ColorMePretty"
    android:background="@color/FunkyPink"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cmp_title"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:textColor="@color/FunkyTeal"/>
    <Button
        android:id="@+id/readySignalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ready"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/cmp_gameControls"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="invisible">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="8"
            android:columnCount="2"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical">
            <!-- row 1 -->
            <Button
                android:id="@+id/redBtn"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/FunkyRed"/>
            <Button
                android:id="@+id/blueBtn"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@android:color/holo_blue_bright"/>
            <!-- row 2 -->
            <Button
                android:id="@+id/blackBtn"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@android:color/black"/>
            <Button
                android:id="@+id/yellowBtn"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/FunkyYellow"/>
            <!-- row 3 -->
            <Button
                android:id="@+id/greenBtn"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#008000"/>
            <Button
                android:id="@+id/orangeBtn"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#FF8C00"/>
            <!-- row 4 -->
            <Button
                android:id="@+id/brownBtn"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#8B4513"/>
            <Button
                android:id="@+id/purpleBtn"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#800080"/>
        </GridLayout>
    </LinearLayout>
</LinearLayout>
